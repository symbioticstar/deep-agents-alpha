{
  "name": "deep-agents-alpha",
  "version": "0.1.0",
  "private": true,
  "description": "Deep Agents project with MCP, Skills, CLI streaming and SSE API",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:cli": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:cli": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "oxfmt package.json tsconfig.json vitest.config.ts README.md .env.example mcp.config.yaml src scripts test --write",
    "format:check": "oxfmt package.json tsconfig.json vitest.config.ts README.md .env.example mcp.config.yaml src scripts test --check",
    "prepare": "husky",
    "sync:skills": "tsx scripts/sync-remote-skills.ts"
  },
  "dependencies": {
    "@langchain/langgraph": "^1.1.5",
    "@langchain/mcp-adapters": "^1.1.3",
    "@langchain/openai": "^1.2.10",
    "deepagents": "^1.8.1",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "langchain": "^1.2.27",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "oxfmt --write",
      "oxlint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "oxfmt --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
